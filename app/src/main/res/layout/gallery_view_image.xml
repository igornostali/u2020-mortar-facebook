<?xml version="1.0" encoding="utf-8"?>

<co.lemonlabs.mortar.example.ui.gallery.GalleryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gallery_item_background">

    <co.lemonlabs.mortar.example.ui.misc.ForegroundImageView
        android:id="@+id/gallery_image_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="@drawable/image_overlay"
        tools:src="#f00" />

    <TextView
        android:id="@+id/gallery_image_title"
        style="@style/Widget.U2020.GalleryImage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_overlay"
        android:ellipsize="end"
        android:gravity="bottom"
        android:padding="6dp"
        android:singleLine="true"
        tools:text="This Is The Title" />

</co.lemonlabs.mortar.example.ui.gallery.GalleryItemView>
